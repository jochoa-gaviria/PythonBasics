#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                id: userLogin
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.Login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label: 
                id: message
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                on_press: root.signUp()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            padding: 20, 20
            spacing: 20, 20
            Label:
                id: "signUp"
                text: "Sign up for a space journey!!"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            Label: 
                id: messageData
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Back Login"
                on_press: root.backLogin()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Submit"
                on_press: root.addUser(root.ids.username.text, root.ids.password.text)
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        Label:
            id: "signUpSuccess"
            text: "Sign up successful!!"
        Button:
            on_press: root.loginPage()
            text: "Login page"

<LoginSuccessScreen>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.logOut()
                source: 'images/logout_hover.png' if self.hovered else 'images/logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label: 
            id: feeling
            text: "How do you feel?"
        TextInput:
            id: feelingInput
            hint_text: "Things to Try: Happy, sad..."
        Button:
            text: "Enlighten me"
            on_press: root.enlighten(root.ids.feelingInput.text)
        ScrollView:
            Label:
                id: enlighten
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signUp_screen"
    SignUpSuccessScreen:
        name: "SignUpSuccess_screen"
    LoginSuccessScreen:
        name: "loginSuccess_screen"